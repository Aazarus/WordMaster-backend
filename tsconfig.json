{
  "compilerOptions": {
    "outDir": "./dist",      // Output compiled files to dist/
    "baseUrl": "./",
    "moduleResolution": "node",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"],                  // Include all TypeScript files in the src folder
  "exclude": ["node_modules"]               // Exclude dependencies from being compiled
}
