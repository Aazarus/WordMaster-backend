{
  "compilerOptions": {
    "baseUrl": ".",                     // Set the base directory for module resolution
    "paths": {
      "@/*": ["src/*"]                  // Map "@" to the "src" directory
    },
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",                     // Specify where to emit the compiled files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"],                  // Include all TypeScript files in the src folder
  "exclude": ["node_modules"]               // Exclude dependencies from being compiled
}
